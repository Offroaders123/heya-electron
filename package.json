{
  "name": "heya-electron",
  "private": true,
  "version": "1.0.0",
  "description": "Looking into what is needed to make a modern Electron project nowadays.",
  "type": "module",
  "main": "./build/main.cjs",
  "scripts": {
    "build": "tsc && esbuild ./src/index.jsx --bundle --outfile='./dist/index.js' && esbuild ./electron/main.cjs --bundle --platform=node --packages=external --outfile='./build/main.cjs' && esbuild ./electron/preload.cjs --bundle --platform=node --packages=external --outfile='./build/preload.cjs'",
    "start": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Offroaders123/heya-electron.git"
  },
  "author": "Brandon Bennett <offroaders123@gmail.com> (https://github.com/Offroaders123)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Offroaders123/heya-electron/issues"
  },
  "homepage": "https://github.com/Offroaders123/heya-electron#readme",
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "electron": "29.1.6",
    "esbuild": "0.20.2",
    "typescript": "^5.4.3"
  }
}
